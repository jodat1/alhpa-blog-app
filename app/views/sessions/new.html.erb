<h1 align=  "center"> Login</h1>

<%= form_for :session, url: login_path do |f|%>


    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">
        <%= f.label :email%>
        
        </label>

    </div>

    <div class="col-sm-8">
        <%= f.email_field :email, class:"form-control",placeholder: "Enter email", autofocus: true%>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">
        <%= f.label :password%>
        
        </label>

    </div>

    <div class="col-sm-8">
        <%= f.password_field :password, class:"form-control",placeholder: "Enter password", autofocus: true%>
    </div>

    <br>
    
    
    <div class="col-sm-8">
        <%= f.submit "Log in", class:"btn btn-primary" %>            
    </div>


<%end%>
<div class=  "col-xs-4 col-xs-offset-4">
[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>